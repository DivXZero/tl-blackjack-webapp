<% mask = true if session[:running] %>
<% session[:dealer_cards].each do |card| %>
    <% if mask %>
        <img src="<%= card_image %>" class="img-rounded img-thumbnail card">&nbsp;
        <% mask = false %>
    <% else %>
        <img src="<%= card_image(card) %>" class="img-rounded img-thumbnail card">&nbsp;
    <% end %>
<% end %>