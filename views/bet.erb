<form method="post" action="/bet" class="form-horizontal">
  <fieldset>
    <legend>How much would you like to bet?</legend>
    <div class="form-group">
      <label for="player_bet" class="col-sm-2 control-label">Bet Amount</label>
      <div class="col-sm-4">
        <input type="text" name="player_bet" id="player_bet" class="form-control">
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-4 col-sm-offset-2">
        <button type="submit" class="btn btn-default">Deal Em'!</button>
      </div>
    </div>
  </fieldset>
</form>